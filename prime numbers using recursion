#include<stdio.h>
int primeno(int,int);
int main()
{
int n,c;
printf("enter number");
scanf("%d",&n);
c=primeno(num,num/2);
if(c==1)
{
printf("%d is a prime number",n);
}
else
{printf("%d is not a prime number",n);
}
return 0;
}
int primeno(int n,int i)
{
if(i==1)
{
return 1;
}
else
{
if(num % i == 0)
{
return 0;
}
else
{
return primeno(num,i-1);
}
}
}
